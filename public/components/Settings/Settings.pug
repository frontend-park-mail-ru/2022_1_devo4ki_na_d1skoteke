.popup
  .popup__body
    .menu-content
      .menu-content__sidebar.sidebar
        .sidebar__username idfurnl
        .sidebar__tab.sidebar__tab_account-settings Account Settings
        .sidebar__tab.sidebar__tab_members Members
      .menu-content__settings.settings
        .settings__title Personal info
        .settings__form
          for input in inputForms
            .setting-field
              label.my-label.setting-field__label #{input.labelname}
              input(
                type= input.type
                name=input.name
                placeholder=input.placeholder
                id=input.name + '-input'
                ).inputField.setting-field__input
          input.submit-btn(type='submit' id= ENTER_TYPE + '-submit-btn' value= btn_msg)

